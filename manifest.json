{
  "name": "Pure Translate Extension",
  "version": "1.0.0",
  "description": "Translate selected text using a built-in translation service.",
  "manifest_version": 3,
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Translate"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
