{
  "name": "Pure Translate Extension",
  "version": "1.0.1",
  "description": "Translate selected text using the Google Translate API.",
  "manifest_version": 3,
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Translate",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/tooltip.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tooltip.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
